data = gedik_yatırım(4)
#-----------------------------------------------------------------------------------------------
data_to_slack = []
for i in range(0,len(data)):
    data_to_slack.append(data.iloc[0,0])
    data_to_slack.append('')
    data_to_slack.append(data.iloc[i,1])
    data_to_slack.append(data.iloc[i,2])
    data_to_slack.append(data.iloc[i,3])
    data_to_slack.append('_______________________________________________________________________________')
 
#--------------------------------------------------------------------------------------------------

for row in data_to_slack:
    post_message_to_slack(row)
